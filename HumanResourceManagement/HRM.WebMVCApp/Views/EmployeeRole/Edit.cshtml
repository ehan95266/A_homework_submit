@model EmployeeRoleResponseModel;
<div class="container">
    <form asp-controller="EmployeeRole" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="my-5 row">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="IsActive">IsActive</label>
            <input asp-for="IsActive" class="form-control" />
            <span asp-validation-for="IsActive"></span>
        </div>
        <input type="submit" value="Update EmployeeRole" class="btn btn-primary" />
    </form>
</div>

